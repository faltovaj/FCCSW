<?xml version="1.0" encoding="UTF-8"?>
<lccdd xmlns:compact="http://www.lcsim.org/schemas/compact/1.0"
  xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xs:noNamespaceSchemaLocation="http://www.lcsim.org/schemas/compact/1.0/compact.xsd">

  <includes>
    <gdmlFile  ref="elements.xml"/>
    <gdmlFile  ref="materials.xml"/>
  </includes>

  <info name="FCChh_ECalBarrel_Mockup"
    title="ECal Barrel Calorimeter"
    author="A.Dell'Acqua"
    url="no"
    status="development"
    version="$Id:??$">
    <comment>ECal very conceptual design</comment>
  </info>

  <define>

    <!-- ECAL dimensions -->
    <!-- cryostat description -->
    <constant name="BarECal_rmin" value="2600*mm"/>
    <constant name="BarECal_rmax" value="3500*mm"/>
    <constant name="BarECal_dz" value="4000*mm"/>

    <!-- calorimeter volume -->
    <constant name="EMBarrel_rmin" value="2700*mm"/>
    <constant name="EMBarrel_rmax" value="3400*mm"/>
    <constant name="EMBarrel_dz" value="3900*mm"/>

  </define>

  <display>
    <vis name="ecal_envelope" r="0.6" g="0.8" b="0.6" alpha="1" showDaughers="true" visible="false" />
    <vis name="ecal_active_vis" r="1.0" g="0.0" b="0.0" alpha="1" showDaughters="false" visible="true" drawingStyle="solid" />
    <vis name="ecal_passive_vis" r="0.0" g="1.0" b="0.0" alpha="1" showDaughters="false" visible="true" drawingStyle="solid" />
    <vis name="ecal_caloZmodule_vis" r="0.0" g="0.0" b="1.0" alpha="1" showDaughters="false" visible="true" drawingStyle="solid" />
  </display>

  <readouts>
    <readout name="BarECal_Readout">
      <!-- Cell definition via segmentation: CartisianGrid or PolarGrid -->
      <segmentation type="CartesianGridXY" grid_size_x="0.5*mm" grid_size_y="0.5*mm"/>
      <!-- <segmentation type="PolarGridRPhi" grid_size_r="5.0*mm" grid_size_phi="0.1*rad"/> -->
      <!-- Volume identifier: first 32 bits for volume ID + 32 bits for cell ID -->
      <id>system:3,ECAL_Cryo:1,active:1,EM_barrel:1,r_layer:10,z_layer:10,x:32:-16,y:-16</id>
    </readout>
  </readouts>

  <detectors>
    <include ref="FCChh_ECalDefinition.xml" />
  </detectors>
</lccdd>

